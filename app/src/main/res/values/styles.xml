<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/jambitGrey</item>
        <item name="colorPrimaryDark">@color/jambitGrey</item>
    </style>

    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.Launcher">
    <item name="android:windowBackground">@drawable/launch_screen</item>
    <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
    <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

    <style name="AlertDialogDarkWhite" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/materialCustomWhite</item>
        <item name="android:background">@color/jambitGrey</item>
    </style>

</resources>
